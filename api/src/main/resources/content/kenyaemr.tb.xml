<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Program ===================== -->

	<bean id="kpsystem.tb.program" class="org.openmrs.module.kpcore.program.ProgramDescriptor">
		<property name="targetUuid" value="${metadata.program.TB}" />
		<property name="eligibilityCalculation" value="org.openmrs.module.kpsystem.calculation.library.tb.EligibleForTbProgramCalculation" />
		<property name="defaultEnrollmentForm" ref="kpsystem.tb.form.enrollment" />
		<property name="defaultCompletionForm" ref="kpsystem.tb.form.completion" />
		<property name="visitForms">
			<set>
				<ref bean="kpsystem.tb.form.followupVisit" />
			</set>
		</property>
		<property name="reports">
			<set>
				<!--<ref bean="kpsystem.tb.report.smear.not.done.ptb.2.8.8.12" />
				<ref bean="kpsystem.tb.report.new.smear.negative.ptb.2.8.12.15" />-->
				<ref bean="kpsystem.tb.report.inProgram" />
				<ref bean="kpsystem.tb.report.needsSputumTest" />
				<ref bean="kpsystem.tb.report.missingSputumResults" />
				<ref bean="kpsystem.tb.report.tbSuspects" />
				<ref bean="kpsystem.tb.report.in.tb.program.missing.pyridoxine" />
				<ref bean="kpsystem.tb.report.in.tb.diary" />
			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kpsystem:program/tb/tbEnrollmentSummary" />
				<entry key="care-panel" value="kpsystem:program/tb/tbCarePanel" />
				<entry key="completion-summary" value="kpsystem:program/tb/tbCompletionSummary" />
			</map>
		</property>
		<property name="order" value="200" />
	</bean>

	<!-- ===================== Identifiers ===================== -->

	<!-- District Registration Number -->
	<bean id="kpsystem.tb.identifier.districtRegistration" class="org.openmrs.module.kpcore.identifier.IdentifierDescriptor">
		<property name="targetUuid" value="${metadata.identifiertype.DISTRICT_REGISTRATION_NUMBER}" />
		<property name="order" value="60" />
	</bean>

	<!-- ===================== Forms ===================== -->

	<!-- TB Enrollment -->
	<bean id="kpsystem.tb.form.enrollment" class="org.openmrs.module.kpcore.form.FormDescriptor">
		<property name="targetUuid" value="89994550-9939-40f3-afa6-173bce445c79" />
		<property name="apps">
			<set>
				<ref bean="kpsystem.app.registration" />
				<ref bean="kpsystem.app.intake" />
				<ref bean="kpsystem.app.clinician" />
				<ref bean="kpsystem.app.chart" />
			</set>
		</property>
		<property name="icon" value="kpui:forms/generic.png" />
		<property name="htmlform" value="kpsystem:tb/tbEnrollment.html" />
	</bean>

	<!-- TB Completion -->
	<bean id="kpsystem.tb.form.completion" class="org.openmrs.module.kpcore.form.FormDescriptor">
		<property name="targetUuid" value="4b296dd0-f6be-4007-9eb8-d0fd4e94fb3a" />
		<property name="apps">
			<set>
				<ref bean="kpsystem.app.registration" />
				<ref bean="kpsystem.app.intake" />
				<ref bean="kpsystem.app.clinician" />
				<ref bean="kpsystem.app.chart" />
			</set>
		</property>
		<property name="icon" value="kpui:forms/completion.png" />
		<property name="htmlform" value="kpsystem:tb/tbDiscontinuation.html" />
	</bean>

	<!-- TB follow up visit -->
	<bean id="kpsystem.tb.form.followupVisit" class="org.openmrs.module.kpcore.form.FormDescriptor">
		<property name="targetUuid" value="2daabb77-7ad6-4952-864b-8d23e109c69d" />
		<property name="apps">
			<set>
				<ref bean="kpsystem.app.clinician" />
				<ref bean="kpsystem.app.chart" />
			</set>
		</property>
		<property name="icon" value="kpui:forms/generic.png" />
		<property name="htmlform" value="kpsystem:tb/tbFollowUpVisit.html" />
	</bean>

	<!-- ===================== Reports ===================== -->

	<bean id="kpsystem.tb.report.inProgram" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="ed001a42-8462-49d3-8e9d-5c7bedc1806d" />
		<property name="name" value="Patients in TB program" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.tb.InTbProgramCalculation" />
		<!--<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" />-->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>

	<bean id="kpsystem.tb.report.needsSputumTest" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="316c9d65-fbce-402e-8e89-b5f7e78276cb" />
		<property name="name" value="Patients due for TB sputum test" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.tb.NeedsTbSputumTestCalculation" />
		<!--<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" />-->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>

	<bean id="kpsystem.tb.report.missingSputumResults" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="c38e0866-b24b-43e0-aa21-e21638742e63" />
		<property name="name" value="Patients with missing TB sputum results" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.tb.MissingTbSputumResultsCalculation" />
		<!--<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" />-->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>

	<bean id="kpsystem.tb.report.tbSuspects" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="e90215ec-21cf-49fa-b4e7-39dde8d3d416" />
		<property name="name" value="TB Suspects not in TB Program" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.tb.TbSuspectCalculation" />
		<!--<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" />-->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>

	<bean id="kpsystem.tb.report.smear.not.done.ptb.2.8.8.12" class="org.openmrs.module.kpcore.report.IndicatorReportDescriptor">
		<property name="targetUuid" value="432585b2-1e24-11e4-aac7-87d0570a70cf" />
		<property name="name" value="PTB Smear Not Done TB Cases" />
		<property name="description" value="Cohort Report on Results of Treatment of Smear Not Done PTB- Results at 2 and 8 Months (Registered 8-12 months Earlier)" />
		<property name="template" value="kpsystem:tb/ptbsmearnotdone2and8months.xls" />
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>

	<bean id="kpsystem.tb.report.new.smear.negative.ptb.2.8.12.15" class="org.openmrs.module.kpcore.report.IndicatorReportDescriptor">
		<property name="targetUuid" value="fd4b2c88-214b-11e4-878d-135d55706f1d" />
		<property name="name" value="New Smear Negative - PTB and Extra PTB" />
		<property name="description" value="Cohort Report on Results of Treatment of New Smear Negative PTB- Results at 2 and 8 Months (Registered 12-15 months Earlier)" />
		<property name="template" value="kpsystem:tb/ptbnewsptumsmearnegative2and8.xls" />
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>
	
	<bean id="kpsystem.tb.report.in.tb.program.missing.pyridoxine" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="56ce37f1-094a-40e7-9abf-ee9c78e5ae7e" />
		<property name="name" value="Patients on TB Treatment missing pyridoxine dose" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.ipt.NotOnIptNotInTbProgramCalculation" />
<!-- 		<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" /> -->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>
	
	<bean id="kpsystem.tb.report.in.tb.diary" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="4ec2dca2-58a2-478c-a71e-98053447b368" />
		<property name="name" value="TB Patients Diary - Expected Visits" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.tb.ScheduledVisitOnDayCalculation" />
<!-- 		<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" /> -->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>

</beans>