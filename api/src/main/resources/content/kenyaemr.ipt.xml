<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Program ===================== -->

	<bean id="kpsystem.ipt.program" class="org.openmrs.module.kpcore.program.ProgramDescriptor">
		<property name="targetUuid" value="${metadata.program.IPT}" />
		<property name="eligibilityCalculation" value="org.openmrs.module.kpsystem.calculation.library.tb.EligibleForTbProgramCalculation" />
		<property name="defaultEnrollmentForm" ref="kpsystem.ipt.form.enrollment" />
		<property name="defaultCompletionForm" ref="kpsystem.ipt.form.completion" />
		<property name="visitForms" >
			<set>
				<ref bean="kpsystem.ipt.form.followup" />
				<ref bean="kpsystem.common.form.geneXpert" />
			</set>
		</property>
	
		<property name="reports">
			<set>
				<ref bean="kpsystem.ipt.report.onIpt" />
				<ref bean="kpsystem.ipt.report.not.on.ipt.not.in.tb.program" />
			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kpsystem:program/ipt/iptInitiationSummary" />
				<entry key="care-panel" value="kpsystem:program/ipt/iptCarePanel" />
				<entry key="completion-summary" value="kpsystem:program/ipt/iptOutcomeSummary" />
			</map>
		</property>
		<property name="order" value="300" />
	</bean>

