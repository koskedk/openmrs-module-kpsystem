	<!-- ===================== Forms ===================== -->

	<!--IPT Initiation-->
	<bean id="kpsystem.ipt.form.enrollment" class="org.openmrs.module.kpcore.form.FormDescriptor">
		<property name="targetUuid" value="61ea2a72-b0f9-47cf-ae86-443f88656acc" />
		<property name="apps">
			<set>
				<ref bean="kpsystem.app.registration" />
				<ref bean="kpsystem.app.intake" />
				<ref bean="kpsystem.app.clinician" />
				<ref bean="kpsystem.app.chart" />
			</set>
		</property>
		<property name="icon" value="kpui:forms/generic.png" />
		<property name="htmlform" value="kpsystem:ipt/iptInitiation.html" />
	</bean>

	<!--IPT Completion -->
	<bean id="kpsystem.ipt.form.completion" class="org.openmrs.module.kpcore.form.FormDescriptor">
		<property name="targetUuid" value="5bdd3b65-8b7b-46a0-9f7b-dfe764143848" />
		<property name="apps">
			<set>
				<ref bean="kpsystem.app.registration" />
				<ref bean="kpsystem.app.intake" />
				<ref bean="kpsystem.app.clinician" />
				<ref bean="kpsystem.app.chart" />
			</set>
		</property>
		<property name="icon" value="kpui:forms/completion.png" />
		<property name="htmlform" value="kpsystem:ipt/iptOutcome.html" />
	</bean>

	<!--IPT follow up-->
	<bean id="kpsystem.ipt.form.followup" class="org.openmrs.module.kpcore.form.FormDescriptor">
		<property name="targetUuid" value="9d0e4be8-ab72-4394-8df7-b509b9d45179" />
		<property name="apps">
			<set>
				<ref bean="kpsystem.app.clinician" />
				<ref bean="kpsystem.app.chart" />
			</set>
		</property>
		<property name="icon" value="kpui:forms/generic.png" />
		<property name="htmlform" value="kpsystem:ipt/iptFollowUp.html" />
	</bean>

	<!-- Clinical Encounter - Gene Xpert Form -->
	<bean id="kpsystem.common.form.geneXpert" class="org.openmrs.module.kpcore.form.FormDescriptor">
		<property name="targetUuid" value="f1eaceeb-c865-4e23-b68e-6523de403ac7" />
		<property name="apps">
			<set>
				<ref bean="kpsystem.app.clinician" />
				<ref bean="kpsystem.app.chart" />
			</set>
		</property>
		<property name="icon" value="kpui:forms/generic.png" />
		<property name="htmlform" value="kpsystem:tb/tbGeneXpert.html" />
		<property name="order" value="201090" />
	</bean>

	<!-- ===================== Reports ===================== -->

	<bean id="kpsystem.ipt.report.onIpt" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="1303cda9-742c-41f1-a4f2-4adadf2b24e9" />
		<property name="name" value="Patients on IPT" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.ipt.OnIptProgramCalculation" />
<!-- 		<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" /> -->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>
	<bean id="kpsystem.ipt.report.not.on.ipt.not.in.tb.program" class="org.openmrs.module.kpcore.report.CalculationReportDescriptor">
		<property name="targetUuid" value="b31d4acb-0db6-4dc5-adc5-7f07da76f142" />
		<property name="name" value="Patients not on IPT and not on TB Treatment" />
		<property name="calculation" value="org.openmrs.module.kpsystem.calculation.library.ipt.NotOnIptNotInTbProgramCalculation" />
<!-- 		<property name="displayIdentifier" ref="kpsystem.tb.identifier.districtRegistration" /> -->
		<property name="apps"><set><ref bean="kpsystem.app.reports" /></set></property>
	</bean>

</beans>