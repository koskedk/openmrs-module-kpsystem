<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Program ===================== -->

	<bean id="kpsystem.kp.program" class="org.openmrs.module.kpcore.program.ProgramDescriptor">
		<property name="targetUuid" value="${metadata.program.KP}" />
		<property name="eligibilityCalculation" value="org.openmrs.module.kpsystem.calculation.library.kp.EligibleForKPProgramCalculation" />
		<property name="defaultEnrollmentForm" ref="kpsystem.kp.form.kpClientEnrolment" />
		<property name="defaultCompletionForm" ref="kpsystem.kp.form.completion" />

		<property name="visitForms" >
			<set>
				<!--<ref bean="kpsystem.ipt.form.followup" />
				<ref bean="kpsystem.common.form.geneXpert" />-->
			</set>
		</property>
	
		<property name="reports">
			<set>

			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kpsystem:program/hiv/hivEnrollmentSummary" />
				<entry key="care-panel" value="kpsystem:program/hiv/hivCarePanel" />
				<entry key="completion-summary" value="kpsystem:program/hiv/hivCompletionSummary" />
			</map>
		</property>
		<property name="order" value="300" />
	</bean>

