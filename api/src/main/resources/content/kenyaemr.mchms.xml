<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Program ===================== -->

	<bean id="kpsystem.mchms.program" class="org.openmrs.module.kpcore.program.ProgramDescriptor">
		<property name="targetUuid" value="${metadata.program.MCH_MS}"/>
		<property name="eligibilityCalculation"
				  value="org.openmrs.module.kpsystem.calculation.library.mchms.EligibleForMchmsProgramCalculation"/>
		<property name="defaultEnrollmentForm" ref="kpsystem.mchms.form.enrollment"/>
		<property name="defaultCompletionForm" ref="kpsystem.mchms.form.completion"/>
		<property name="patientForms">
			<set>
				<!--<ref bean="kpsystem.mchms.form.infantFeeding"/>-->
				<ref bean="kpsystem.mchms.form.preventiveServices"/>
				<ref bean="kpsystem.mchms.form.delivery"/>
				<ref bean="kpsystem.mchms.form.discharge"/>
			</set>
		</property>
		<property name="visitForms">
			<set>
				<ref bean="kpsystem.mchms.form.antenatalVisit"/>
				<ref bean="kpsystem.mchms.form.postnatalVisit"/>
				<ref bean="kpsystem.common.form.tbScreening"/>
				<ref bean="kpsystem.common.form.geneXpert"/>
			</set>
		</property>
		<property name="reports">
			<set>
				<ref bean="kpsystem.mchms.report.lateEnrollment"/>
				<ref bean="kpsystem.mchms.report.hivTestedAtEnrollment"/>
				<ref bean="kpsystem.mchms.report.notHivTested"/>
				<ref bean="kpsystem.mchms.report.onHaart"/>
				<ref bean="kpsystem.mchms.report.notOnArt"/>
				<ref bean="kpsystem.mchms.report.knownPartnerHivStatus"/>
				<ref bean="kpsystem.mchms.report.ancRegister"/>
				<ref bean="kpsystem.mchcs.report.maternityRegister" />
				<ref bean="kpsystem.mchms.report.pncRegister"/>
			</set>
		</property>
		<property name="fragments">
			<map>
				<entry key="enrollment-summary" value="kpsystem:program/mchms/mchmsEnrollmentSummary"/>
				<entry key="care-panel" value="kpsystem:program/mchms/mchmsCarePanel"/>
				<entry key="completion-summary" value="kpsystem:program/mchms/mchmsCompletionSummary"/>
			</map>
		</property>
		<property name="order" value="300"/>
	</bean>

