<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- ===================== Content ===================== -->

	<import resource="content/kenyaemr.common.xml" />
	<import resource="content/kenyaemr.kp.xml" />

	<!-- ===================== App descriptors ===================== -->

	<bean id="kpsystem.app.registration" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.registration" />
		<constructor-arg value="Registration" />
		<constructor-arg value="registrationapp/registerPatient.page?appId=referenceapplication.registrationapp.registerPatient" />
		<constructor-arg value="kpui:apps/registration.png" />
		<constructor-arg value="100" />
	</bean>

	<bean id="kpsystem.app.intake" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.intake" />
		<constructor-arg value="Triage" />
		<constructor-arg value="kpsystem/intake/intakeHome.page" />
		<constructor-arg value="kpui:apps/intake.png" />
		<constructor-arg value="200" />
	</bean>

	<bean id="kpsystem.app.clinician" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.medicalEncounter" />
		<constructor-arg value="Clinician" />
		<constructor-arg value="kpsystem/clinician/clinicianHome.page" />
		<constructor-arg value="kpui:apps/clinician.png" />
		<constructor-arg value="300" />
	</bean>

	<bean id="kpsystem.app.chart" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.medicalChart" />
		<constructor-arg value="Chart" />
		<constructor-arg value="kpsystem/chart/chartHome.page" />
		<constructor-arg value="kpui:apps/chart.png" />
		<constructor-arg value="400" />
	</bean>

	<bean id="kpsystem.app.reports" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.reports" />
		<constructor-arg value="Reports" />
		<constructor-arg value="kpsystem/reports/reportsHome.page" />
		<constructor-arg value="kpui:apps/reports.png" />
		<constructor-arg value="500" />
	</bean>

	<bean id="kpsystem.app.facilityDashboard" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.facilityDashboard" />
		<constructor-arg value="Facility Dashboard" />
		<constructor-arg value="kpsystem/facilityDashboard/facilityDashboardHome.page" />
		<constructor-arg value="kpui:apps/facilityDashboard.png" />
		<constructor-arg value="510" />
	</bean>

	<bean id="kpsystem.app.directory" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.directory" />
		<constructor-arg value="Directory" />
		<constructor-arg value="kpsystem/directory/directoryHome.page" />
		<constructor-arg value="kpui:apps/directory.png" />
		<constructor-arg value="600" />
	</bean>

	<bean id="kpsystem.app.facilities" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.facilities" />
		<constructor-arg value="Facilities" />
		<constructor-arg value="kpsystem/facilities/facilitiesHome.page" />
		<constructor-arg value="kpui:apps/facilities.png" />
		<constructor-arg value="700" />
	</bean>

	<bean id="kpsystem.app.admin" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.admin" />
		<constructor-arg value="Admin" />
		<constructor-arg value="kpsystem/admin/adminHome.page" />
		<constructor-arg value="kpui:apps/admin.png" />
		<constructor-arg value="800" />
	</bean>

	<bean id="kpsystem.app.developer" factory-bean="kpcore.appFactoryBean" factory-method="createInstance">
		<constructor-arg value="kpsystem.developer" />
		<constructor-arg value="Developer" />
		<constructor-arg value="kpsystem/developer/developerHome.page" />
		<constructor-arg value="kpui:apps/developer.png" />
		<constructor-arg value="1000000" />
	</bean>

	<!-- ===================== Lab test catalogs ===================== -->

	<!-- Acts as a base class and means we can avoid specifying the full class name each time -->
	<bean name="TestDefinition" class="org.openmrs.module.kpcore.lab.LabTestDefinition" abstract="true" />

	<bean id="kpsystem.common.lab.standardcatalog" class="org.openmrs.module.kpcore.lab.LabTestCatalog">
		<property name="tests">
			<map>
				<entry key="Urine Tests">
					<list>
						<bean parent="TestDefinition" p:concept="302AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- URINALYSIS -->
						<bean parent="TestDefinition" p:concept="45AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- URINE PREGNANCY TEST -->
					</list>
				</entry>
				<entry key="Blood Tests">
					<list>
						<bean parent="TestDefinition" p:concept="21AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- HAEMOGLOBIN -->
						<bean parent="TestDefinition" p:concept="1319AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- LYMPHOCYTE COUNT -->
						<!-- Missing: Serum Cryptococcal Antigen -->
						<!--<bean parent="TestDefinition" p:concept="856AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" />&lt;!&ndash; HIV VIRAL LOAD &ndash;&gt;-->
						<bean parent="TestDefinition" p:concept="855AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- ERYTHROCYTE SEDIMENTATION RATE -->
						<bean parent="TestDefinition" p:concept="857AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- BLOOD UREA NITROGEN -->
					</list>
				</entry>
				<entry key="Biochemistry">
					<list>
						<bean parent="TestDefinition" p:concept="1012AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- SERUM LACTATE -->
						<bean parent="TestDefinition" p:concept="887AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- SERUM GLUCOSE -->
						<bean parent="TestDefinition" p:concept="654AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- SERUM GLUTAMIC-PYRUVIC TRANSAMINASE -->
						<bean parent="TestDefinition" p:concept="790AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- SERUM CREATININE -->
						<!-- Missing: Lipid profile -->
						<bean parent="TestDefinition" p:concept="1299AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- AMYLASE -->
					</list>
				</entry>
				<entry key="Parasitology and Microbiology">
					<list>
						<bean parent="TestDefinition" p:concept="304AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- STOOL EXAM -->
						<!-- Missing: Stool Cultures -->
						<bean parent="TestDefinition" p:concept="32AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA" /><!-- MALARIAL SMEAR -->
					</list>
				</entry>
			</map>
		</property>
	</bean>

	<!-- Module service -->

	<bean id="kenyaEmrService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="org.openmrs.module.kpsystem.api.impl.KenyaEmrServiceImpl">
				<property name="kenyaEmrDAO">
					<bean class="org.openmrs.module.kpsystem.api.db.hibernate.HibernateKenyaEmrDAO">
						<property name="sessionFactory"><ref bean="sessionFactory"/></property>
					</bean>
				</property>
			</bean>
		</property>
		<property name="preInterceptors">
			<ref bean="serviceInterceptors" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="transactionAttributeSource" />
		</property>
	</bean>

	<!-- Register service with OpenMRS -->

	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.kpsystem.api.KenyaEmrService</value>
				<ref local="kenyaEmrService"/>
			</list>
		</property>
	</bean>

	<!-- External requirements -->

	<bean id="cielRequirement" class="org.openmrs.module.kpsystem.system.CielRequirement">
		<property name="requiredVersion" value="${cielVersion}" />
	</bean>

	<!-- Build properties -->

	<bean id="iso8601DateFactory" class="java.text.SimpleDateFormat">
		<constructor-arg value="yyyy-MM-dd'T'HH:mm:ssZ" />
	</bean>

	<bean id="kenyaEmrBuildProperties" class="org.openmrs.module.kpsystem.util.BuildProperties">
		<property name="version" value="${project.version}" />
		<property name="buildDate">
			<bean factory-bean="iso8601DateFactory" factory-method="parse">
				<constructor-arg value="${moduleBuildDate}" />
			</bean>
		</property>
		<property name="developer" value="${user.name}"/>
	</bean>

</beans>